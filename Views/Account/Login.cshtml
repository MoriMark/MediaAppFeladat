@using MediaAppFeladat.ViewModels;
@model LoginViewModel;

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<img src="\images\exora.png" id="exoraimg"/>
<div class="account_container">
	<div class="account-box">
		<h2 class="text-center mb-4">eControl</h2>
		<form asp-action="Login" method="post">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<input asp-for="Email" class="form-control" placeholder="Felhasználónév vagy e-mail cím" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input asp-for="Password" class="form-control" id="myInput" placeholder="Jelszó" />
				<!-- An element to toggle between password visibility -->
				<input type="checkbox" onclick="showPassword()" id="showPassword">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div id="LoginRectangle">
				<input type="submit" value="Bejelentkezés" id="LoginButton" />
			</div>
			<div class="float-end">
				<a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
					Elfelejtettem a jelszavamat
				</a>
			</div>

		</form>
	</div>
</div>

@section Scripts{
@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
	}
}